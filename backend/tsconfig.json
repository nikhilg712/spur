{
  "compilerOptions": {
    "target": "ES2020",
    "module": "node16",
    "esModuleInterop": true,
    "strict": true,
    "rootDir": "src",
    "outDir": "dist",
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "exclude": ["node_modules", "prisma", "prisma.config.ts"]
}
